{
  "formType": "map_wizard",
  "title": "Map Configuration Wizard",
  "steps": [
    {
      "id": 1,
      "title": "Source Configuration",
      "description": "Configure source mapping details",
      "fields": [
        {
          "key": "source_type",
          "label": "Source Type",
          "type": "select",
          "required": true,
          "placeholder": "Select source type",
          "options": ["database", "file", "api", "stream"],
          "helperText": "Select the type of data source",
          "validation": {
            "required": true
          }
        },
        {
          "key": "source_connection",
          "label": "Source Connection",
          "type": "input",
          "required": true,
          "placeholder": "Enter source connection string",
          "validation": {
            "required": true
          }
        },
        {
          "key": "source_format",
          "label": "Source Format",
          "type": "select",
          "required": true,
          "placeholder": "Select source format",
          "options": ["json", "csv", "xml", "parquet", "avro"]
        }
      ],
      "completionLogic": {
        "type": "all_required_filled",
        "requiredFields": ["source_type", "source_connection", "source_format"]
      },
      "visibility": {
        "type": "always"
      }
    },
    {
      "id": 2,
      "title": "Target Configuration",
      "description": "Configure target mapping details",
      "fields": [
        {
          "key": "target_type",
          "label": "Target Type",
          "type": "select",
          "required": true,
          "placeholder": "Select target type",
          "options": ["database", "file", "api", "warehouse"],
          "validation": {
            "required": true
          }
        },
        {
          "key": "target_connection",
          "label": "Target Connection",
          "type": "input",
          "required": true,
          "placeholder": "Enter target connection string",
          "validation": {
            "required": true
          }
        },
        {
          "key": "target_schema",
          "label": "Target Schema",
          "type": "input",
          "required": true,
          "placeholder": "Enter target schema name",
          "validation": {
            "required": true
          }
        },
        {
          "key": "target_table",
          "label": "Target Table",
          "type": "input",
          "required": true,
          "placeholder": "Enter target table name",
          "validation": {
            "required": true
          }
        }
      ],
      "completionLogic": {
        "type": "all_required_filled",
        "requiredFields": ["target_type", "target_connection", "target_schema", "target_table"]
      },
      "visibility": {
        "type": "always"
      }
    },
    {
      "id": 3,
      "title": "Field Mapping",
      "description": "Configure field mappings between source and target",
      "fields": [
        {
          "key": "field_mappings",
          "label": "Field Mappings",
          "type": "textarea",
          "required": true,
          "placeholder": "Enter field mappings in JSON format",
          "helperText": "Example: {\"source_field\": \"target_field\"}",
          "rows": 6,
          "validation": {
            "required": true
          }
        },
        {
          "key": "transformation_rules",
          "label": "Transformation Rules",
          "type": "textarea",
          "placeholder": "Enter transformation rules",
          "helperText": "Optional transformation rules to apply during mapping",
          "rows": 4
        }
      ],
      "completionLogic": {
        "type": "all_required_filled",
        "requiredFields": ["field_mappings"]
      },
      "visibility": {
        "type": "always"
      }
    },
    {
      "id": 4,
      "title": "Mapping Options",
      "description": "Configure additional mapping options",
      "fields": [
        {
          "key": "mapping_mode",
          "label": "Mapping Mode",
          "type": "select",
          "required": true,
          "placeholder": "Select mapping mode",
          "options": ["direct", "transform", "aggregate", "split"],
          "defaultValue": "direct"
        },
        {
          "key": "error_handling",
          "label": "Error Handling",
          "type": "select",
          "required": true,
          "placeholder": "Select error handling strategy",
          "options": ["skip", "fail", "log", "retry"],
          "defaultValue": "log"
        },
        {
          "key": "batch_size",
          "label": "Batch Size",
          "type": "number",
          "placeholder": "Enter batch size",
          "validation": {
            "min": 1,
            "max": 10000
          },
          "defaultValue": 1000
        }
      ],
      "completionLogic": {
        "type": "all_required_filled",
        "requiredFields": ["mapping_mode", "error_handling"]
      },
      "visibility": {
        "type": "always"
      }
    }
  ],
  "submitEndpoint": {
    "url": "https://api.example.com/map-config",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer token"
    },
    "payloadMapping": "map_wizard_payload"
  }
}